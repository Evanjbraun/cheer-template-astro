---
import { Image } from 'astro:assets';
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import downArrow from "@assets/cheerStatic/downArrow.png";
---


<div class="overflow-hidden pb-40 ">
  <main
    class="flex flex-col gap-20 place-items-center min-h-[50rem] pt-28 pb-20 
    md:pt-26 md:pb-8 max-w-screen-xl m-auto" id="heroMain">

    
    <div id="initialHero"  class="flex justify-center gap-4 flex-col items-center text-center w-full p-2 md:p-10 px-4 md:px-16">
      <h1
        class="text-contrast-color text-4xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter ">
        Cheers to Growth. <br><span class="text-dark">And Here's to Development.</span>
      </h1>
      <p class="text-lg mt-4 text-font-color1 md:max-w-4xl px-1 md:px-10 opacity-80">
        
       We're a small studio working with only a few clients at a time offering dev-on-demand services 
       through a subscription that you can pause or cancel anytime. Oh, and we're a bit "untraditional". 
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-8">
        <Link
            href="#planSection"
            size="lg"
            id="outline-button"
            style="outline"
            target=""
            class="flex gap-1 w-60 text-dark bg-prime-color border-dark hover:bg-font-white hover:text-dark items-center justify-center"
            rel="noopener">
            <Icon class="text-font-color1 w-5 h-5" name="bx:bxs-crown" />
            See Plans
        </Link>
      
        <Link
          size="lg"
          id="outline-button"
          style="outline"
          rel="noopener"
          href="#"
          class="flex gap-1 w-60 text-dark bg-second-color border-dark hover:bg-font-white hover:text-dark items-center justify-center"
          target="">
          <Icon class="text-black w-4 h-4" name="bx:bxs-right-arrow" />
          Welcome
        </Link>
      </div>
      <!-- 
      <div class="mt-8 max-w-2xl hidden md:flex gap-10 justify-between ">
        <span class="flex items-center"><Icon class="text-black w-5 h-5 mr-2" name="bx:bxs-zap" /> Unlimited Requests </span>
        <span class="flex items-center"><Icon class="text-black w-5 h-5 mr-2" name="bx:bxs-cool" /> Cancel Anytime </span>
        <span class="flex items-center"><Icon class="text-black w-5 h-5 mr-2" name="bx:bxs-shield-alt-2" /> Reliable Support </span>
      </div>
      -->
    </div>

    <!-- Image hero section  -->
    <div id="heroImgWrap" class="shadow-lg shadow-gray-700 py-6 px-5 h-max
    min-h-max flex w-full flex-col relative rounded-2xl bg-red-50">
       <!-- top row  -->
      <div class="flex flex-col min-h-max">
        <div id="insetShadow" class="bg-dark z-20 flex flex-col p-5 left-64 w-full min-h-max md:h-[39rem] rounded-lg">
          <div class="h-full w-full relative">

            <div class="w-full z-20 h-full m-auto flex justify-end">
              <video class=" w-full h-full z-20 object-cover rounded-lg" autoplay muted playsinline loop>
                <source src="cheervideo/Bones21.webm" type="video/webm">
                Your browser does not support the video tag.
            </video>
            </div>
          </div>
         </div>
      </div>

  <!-- bottom row  -->
      <div class="flex flex-row min-h-max h-[30rem]">

        <div id="shake" class="bg-red-50 p-5 ml-[-50px;] rotate-3 w-1/3 h-[32rem] rounded-lg shadow-md shadow-slate-900">
          <div class="h-full w-full relative flex flex-col">
            <span class="text-dark uppercase bg-pink-400 px-3 z-40  w-fit relative py-1 font-bold">Creatives</span>
            <h1 class="text-2xl lg:text-2xl w-full py-3 text-dark uppercase"><br>Shake Things Up.<br>Elevate Engagement.</h1>
            <div class="w-4/5 z-20 h-full">
             <video class="w-full h-full z-20 object-contain rounded-lg" autoplay muted playsinline loop>
               <source src="cheervideo/cheerWalking.webm" type="video/webm">
               Your browser does not support the video tag.
           </video>
            </div>
          </div>
         </div>

         <div class="bg-contrast-color mt-10 md:h-full duration-300 p-5 z-50 w-full rounded-lg shadow-md min-h-fit shadow-slate-900">
          <div class="h-full w-full relative flex flex-col gap-2">
           <div class="flex-col flex gap-6 h-full justify-start">
             <span class="text-dark uppercase bg-font-white px-3 pt-1 mb-1 z-40 text-center relative w-fit py-1 font-bold text-sm ">Non-Traditional</span>
             <h1 class="text-2xl md:text-5xl w-full py-2 text-dark uppercase">Looking for a stiff, corporate tone? <br>
              <span class="text-prime-color text-2xl md:text-5xl">Yeah, we're not the studio for that.</span></h1>
           </div>
           <div>We Shine with...</div>
            <div class="bg-font-white px-2 rounded-xl w-max z-20 h-14 pt-2 flex">
             
              <ul id="handleList">
                <li class="handleListItem ">Sports</li>
                <li class="handleListItem">Foods</li>
                <li class="handleListItem">Drinks</li>
                <li class="handleListItem ">Security</li>
                <li class="handleListItem">Scalability</li>
                <li class="handleListItem">You get the point.</li>
              </ul>
            </div>
          </div>
         </div>

      </div>
      
     </div>
  </main>
  <div class="relative w-full h-40 md:h-80">
    <div class="w-36 h-64 md:h-96 md:w-64 absolute top-0 left-1/3 md:left-[42%] z-20 rotate-[341deg] ">
      <Image
        src={downArrow}
        alt="down arrow"
        class="w-full h-full object-contain hoverDown"
        loading="lazy"
        format="avif"
      />
    </div>
   </div>
</div>

<script type="text/javascript">
  const allListItems = document.querySelectorAll('.handleListItem');
  let currentIndex = 0;
  const lengthList = allListItems.length;

  function loopListItems() {
    if (currentIndex >= 1 && allListItems[currentIndex-1].classList.contains('activeListItem')) {
      
      allListItems[currentIndex-1].classList.remove('activeListItem');
    }

    if (currentIndex == lengthList) {
     
      currentIndex = 0;
    }

    allListItems[currentIndex].classList.add('activeListItem');
    currentIndex = (currentIndex + 1) ;
   
  }

  loopListItems();

  const intervalId = setInterval(loopListItems, 1500);
</script>