---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
import { Image } from 'astro:assets';
import navLogo  from "@assets/cheerVector/cheerLogo2.svg";


const menuitems = [
  {
    title: "Services",
    path: "/services",
  },
  {
    title: "Plans",
    path: "/#planSection",
  },
  {
    title: "About Us",
    path: "/about",
  },

];
---
<div class="bg-second-color z-0 relative h-full py-2">
<Container>
  <header class="flex flex-col gap-5 pt-3 lg:flex-row px-12 justify-center md:justify-between items-center 
  py-8 mt-5 z-40 relative">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between z-30">
        <a href="/" class="text-lg">
          <span class="font-bold text-dark flex ">
            <!-- NAV LOGO -->
            <Image
            src={navLogo}
            width="175"
            widths={[100, 200, 300, 400]} 
            sizes={`(max-width: 360px) 100px, 
                    (max-width: 720px) 150px, 
                    (max-width: 1200px) 200px, 
                    300px`} 
            alt="devCheer Logo"
          />
          </span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="mt-6 w-10 h-10 text-dark " />
        </div>
      </div>
      <MenuItems class="pt-3 hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      id={`navMenuItem${index}`}
                      class="flex lg:px-5 py-2 px-6 md:justify-normal justify-center text-2xl uppercase font-black
                       text-font-white ease-in-out duration-300 
                       rounded-lg hover:text-prime-color">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex justify-center relative z-40 items-center mt-3 gap-4">
      
          <Link
            size="lg"
            id=""
            style="outline"
            rel="noopener"
            href="/contact"
            class="outlineButton flex gap-1 w-48 text-dark relative z-40 text-2xl bg-prime-color border-dark hover:bg-font-white hover:text-dark items-center justify-center"
            target="">
            Say Hello
        </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4 relative z-40 ">
     
        <Link
          size="lg"
          id=""
          style="outline"
          rel="noopener"
          href="/contact"
          class="outlineButton w-full text-dark uppercase text-lg relative z-40 font-black bg-contrast-color border-dark ease-in-out duration-300 hover:bg-font-white hover:text-dark items-center justify-center"
          target="">
          Say Hello
        </Link>
      </div>
    </div>
  </header>
</Container>
</div>