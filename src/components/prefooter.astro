    <div id="boxTestimonial" class="w-[450px] shrink-0 md:w-96 bg-slate-300 p-8 border-black border-2 rounded-l-xl rounded-t-xl overflow-hidden relative">
      
      <div class="h-32 w-32 my-5 mx-auto">
        <Image
        src={alice}
        alt="alice"
        loading="lazy"
        format="avif"
        class="w-full h-full object-cover rounded-[99px] border-black border-2 shadow-xl"
